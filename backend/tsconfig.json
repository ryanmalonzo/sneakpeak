    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "outDir": "build"
  },
  "exclude": ["eslint.config.js", "./build"],
  "include": ["./*.ts"]
}
